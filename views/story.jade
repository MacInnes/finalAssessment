extends layout

block content
  br
  br

  div(class='col-md-12')
    h2= story.title
  div(class='col-md-4')
    img(src= story.image)
  div(class='col-md-8')
    p= story.summary
    a(href= story.link) View site
  div(class='col-md-12')
    hr
    form(action='/stories/' + story._id method='post')
      label Add your opinion!
      div
        textarea(name='opinion' type='text'  rows='5' cols='30' required)
      button(type='submit') Opine


  if (story.opinions.length)
    div(class='col-md-6')
      h4 Some opinions:
      each opinion in story.opinions
        p= opinion
        hr

    div(class='col-md-6')
      h4 Expert Analysis
      each count, word in words
        p #{word}: #{count}

  script(src='https://code.jquery.com/jquery-2.2.0.min.js')
  script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha256-KXn5puMvxCw+dAYznun+drMdG1IFl3agK0p/pqT9KAo= sha512-2e8qq0ETcfWRI4HJBzQiA3UoyFk6tbNyG+qSaIBZLyW9Xf3sWZHN/lxe9fTh1U45DpPf07yj94KsUHHWe4Yk1A==", crossorigin="anonymous")
