extends layout

block content

  h3 Add a story
  form(action='/' method='post')
    div
      label Title:
        input(name='title' type='text')
    div
      label Link:
        input(name='link' type='text')
    div
      label Image URL:
        input(name='image' type='url')
    div
      label Summary:
        input(name='summary' type='text') 
    button(type='submit') Add a story
  

  div(id='storiesSection')
    if (stories)
      each story in stories
        a(href='stories/' + story._id)
          h4 #{story.title}

  script(src='https://code.jquery.com/jquery-2.2.0.min.js')
